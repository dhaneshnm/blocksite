{
  "manifest_version": 3,
  "name": "Website Blocker",
  "version": "1.1",
  "description": "Blocks specific websites with an editable blocklist.",
  "permissions": ["declarativeNetRequest", "storage"],
  "host_permissions": ["*://*/*"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "options_page": "options.html"
}
